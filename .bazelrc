# Add asdf dir into the action env so we can use the asdf installed Ruby
build --action_env=ASDF_DIR

# Specify cache directory to make it easier to share the cache in the CI
build --disk_cache cache/bazel_cache
build --repository_cache cache/bazel_repository_cache

build:debug --show_progress --worker_verbose --verbose_failures --test_output=streamed  --subcommands
build:debug --//:setup_debug_flag

# To ensure a hermetic environment for Java
build --java_runtime_version=remotejdk_11