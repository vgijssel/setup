{
  "installation": {
    "version": "21.4.1"
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "nxCloudId": "68b34de6a0cec86944bec2d3",
  "release": {
    "projectsRelationship": "independent",
    "versionPlans": true,
    "releaseTagPattern": "{projectName}@{version}",
    "groups": {
      "apps": {
        "projects": ["devcontainer"],
        "projectsRelationship": "independent",
        "docker": {
          "skipVersionActions": true,
          "registryUrl": "docker.io",
          "groupPreVersionCommand": "echo BEFORE VERSIONING"
        },
        "changelog": {
          "projectChangelogs": true
        }
      }
    }
  },
    "plugins": [
    {
      "plugin": "@nx/docker",
      "exclude": [
        "apps/escaperoom/**",
        "images/distrobuilder-image/**",
        "images/ipxe-efi/**",
        "occupancy_component/**",
        "tools/spacelift/**",
        "tools/template/test/**"
      ],
      "options": {
        "buildTarget": "build",
        "runTarget": "run"
      }
    }
  ]
}
