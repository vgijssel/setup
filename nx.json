{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    }
  ],
  "release": {
    "projects": ["*"],
    "projectsRelationship": "independent",
    "versionPlans": true,
    "version": {
      "generatorOptions": {
        "updateDependents": "auto"
      }
    },
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false
        }
      }
    }
  }
}
