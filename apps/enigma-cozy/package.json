{
  "name": "enigma-cozy",
  "version": "0.2.0",
  "nx": {
    "projectType": "application",
    "sourceRoot": "apps/enigma-cozy",
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ]
    },
    "targets": {
      "validate": {
        "command": "goss validate",
        "options": {
          "cwd": "{projectRoot}"
        }
      },
      "upgrade": {
        "command": "./scripts/upgrade.sh",
        "options": {
          "cwd": "{projectRoot}"
        }
      },
      "upgrade-talos": {
        "command": "./scripts/upgrade-talos.sh",
        "options": {
          "cwd": "{projectRoot}"
        }
      }
    },
    "tags": [
      "scope:app",
      "type:stack",
      "kubernetes",
      "development"
    ],
    "metadata": {
      "dependencies": {
        "cozystack/cozystack": {
          "version": "v0.38.3",
          "datasource": "github-releases"
        },
        "cozystack/talos": {
          "version": "v1.11.3",
          "datasource": "docker",
          "packageName": "ghcr.io/cozystack/cozystack/talos"
        }
      }
    }
  },
  "private": true
}
