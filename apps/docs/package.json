{
  "name": "docs",
  "version": "1.0.1",
  "description": "Documentation site built with MkDocs",
  "nx": {
    "projectType": "application",
    "sourceRoot": "apps/docs",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "mkdocs build",
          "cwd": "."
        },
        "description": "Build documentation site",
        "cache": true,
        "inputs": [
          "{projectRoot}/**/*.md",
          "{projectRoot}/**/*.yml",
          "{projectRoot}/**/*.yaml",
          "{workspaceRoot}/mkdocs.yml",
          "{workspaceRoot}/docs/**/*"
        ],
        "outputs": [
          "{workspaceRoot}/site"
        ]
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "mkdocs serve",
          "cwd": "."
        },
        "description": "Serve documentation site locally"
      }
    },
    "tags": [
      "type:application",
      "scope:documentation"
    ]
  },
  "private": true
}
