network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      dhcp4: no
      dhcp6: no
  bridges:
    br0:
      interfaces:
        - eth0
      addresses:
        - {{ ip_address }}/24
      routes:
        - to: 0.0.0.0/0
          via: {{ gateway }}
      nameservers:
        addresses:
          {% for ns in nameservers %}
          - {{ ns }}
          {% endfor %}