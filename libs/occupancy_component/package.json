{
  "name": "occupancy_component",
  "version": "0.4.0",
  "description": "Home Assistant custom component for occupancy tracking",
  "nx": {
    "projectType": "library",
    "sourceRoot": "libs/occupancy_component",
    "targets": {
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "uv run pytest",
          "cwd": "libs/occupancy_component"
        },
        "cache": true,
        "inputs": [
          "{projectRoot}/**/*.py",
          "{projectRoot}/pyproject.toml",
          "{projectRoot}/uv.lock"
        ],
        "outputs": [
          "{projectRoot}/.pytest_cache"
        ],
        "metadata": {
          "description": "Run pytest tests using uv for the occupancy_component library"
        }
      }
    },
    "tags": [
      "type:library",
      "scope:home-automation",
      "platform:home-assistant",
      "language:python"
    ]
  },
  "private": true
}
