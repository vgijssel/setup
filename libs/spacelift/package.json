{
  "name": "spacelift",
  "version": "0.1.0",
  "nx": {
    "projectType": "library",
    "sourceRoot": "libs/spacelift",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker build -t spacelift-runner .",
          "cwd": "libs/spacelift"
        },
        "cache": true,
        "metadata": {
          "description": "Build Spacelift runner Docker image"
        }
      }
    },
    "tags": [
      "spacelift",
      "docker",
      "ansible",
      "infrastructure",
      "skip-ci"
    ]
  },
  "private": true
}
