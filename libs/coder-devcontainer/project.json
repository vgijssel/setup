{
  "name": "coder-devcontainer",
  "projectType": "library",
  "sourceRoot": "libs/coder-devcontainer",
  "targets": {
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform validate",
        "cwd": "libs/coder-devcontainer"
      },
      "cache": true,
      "metadata": {
        "description": "Validate the Coder template Terraform configuration"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform fmt",
        "cwd": "libs/coder-devcontainer"
      },
      "cache": false,
      "metadata": {
        "description": "Format the Coder template Terraform files"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform validate",
        "cwd": "libs/coder-devcontainer"
      },
      "cache": true,
      "metadata": {
        "description": "Test the Coder template configuration"
      }
    }
  },
  "tags": ["coder", "devcontainer", "terraform", "development-environment"]
}
