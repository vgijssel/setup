{
  "name": "javascript",
  "version": "0.0.0",
  "nx": {
    "projectType": "library",
    "sourceRoot": "third_party/javascript",
    "targets": {
      "update-lockfile": {
        "executor": "nx:run-commands",
        "options": {
          "command": "deno install --config=deno.json --lock=deno.lock",
          "cwd": "third_party/javascript"
        },
        "cache": false,
        "metadata": {
          "description": "Update Deno lockfile for all JavaScript tools"
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "deno install --config=deno.json --lock=deno.lock --frozen",
          "cwd": "third_party/javascript"
        },
        "cache": true,
        "inputs": [
          "{projectRoot}/deno.json",
          "{projectRoot}/deno.lock",
          "{projectRoot}/*-runner.ts"
        ],
        "metadata": {
          "description": "Validate that Deno lockfile is up-to-date with deno.json and runner scripts"
        }
      }
    },
    "tags": [
      "javascript",
      "deno",
      "npm"
    ]
  },
  "private": true
}
