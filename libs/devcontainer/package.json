{
  "name": "devcontainer",
  "version": "0.1.2",
  "dependencies": {
    "devenv": "0.1.0"
  },
  "nx": {
    "sourceRoot": ".devcontainer",
    "projectType": "application",
    "implicitDependencies": [
      "devenv"
    ],
    "targets": {
      "test": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "parallel": false,
          "commands": [
            "devcontainer build --workspace-folder . --image-name devcontainer",
            "docker run --privileged --rm -v $(pwd):/workspaces/setup devcontainer bin/direnv exec . goss --gossfile ./libs/devenv/goss.yaml validate"
          ]
        },
        "cache": true
      },
      "nx-release-publish": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "libs/devcontainer",
          "parallel": false,
          "commands": [
            { "command": "devcontainer build --workspace-folder . --image-name devcontainer", "forwardAllArgs": false },
            { "command": "./push-image.sh" }
          ]
        }
      }
    }
  }
}
