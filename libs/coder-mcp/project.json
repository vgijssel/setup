{
  "name": "coder-mcp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/coder-mcp/src",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "libs/coder-mcp"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trunk check src/ tests/",
        "cwd": "libs/coder-mcp"
      }
    },
    "secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "op read 'op://setup-devenv/coder-speckit/credential' > libs/coder-mcp/.env",
          "echo 'CODER_URL=https://macbook-pro-van-maarten.tail2c33e2.ts.net' >> libs/coder-mcp/.env"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m coder_mcp.server",
        "cwd": "libs/coder-mcp"
      }
    }
  },
  "tags": ["type:library", "scope:infrastructure"]
}
