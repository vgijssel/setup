{
  "name": "fleet-mcp",
  "version": "0.4.0",
  "description": "Fleet MCP Server for Claude Code agents",
  "private": true,
  "nx": {
    "projectType": "library",
    "sourceRoot": "libs/fleet-mcp/src",
    "targets": {
      "server": {
        "executor": "nx:run-commands",
        "options": {
          "command": "uv run --all-extras uvicorn fleet_mcp.__main__:app --host 127.0.0.1 --port 8000 --reload --timeout-graceful-shutdown 3",
          "cwd": "libs/fleet-mcp"
        },
        "metadata": {
          "description": "Run the fleet-mcp server with hot reload"
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "uv run --all-extras pytest -v",
          "cwd": "libs/fleet-mcp"
        },
        "cache": true,
        "inputs": [
          "{projectRoot}/**/*.*",
          "!{projectRoot}/.pytest_cache/**",
          "!{projectRoot}/.venv/**",
          "!{projectRoot}/.env"
        ],
        "metadata": {
          "description": "Run pytest tests"
        }
      }
    }
  }
}
