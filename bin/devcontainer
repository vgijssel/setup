#!/usr/bin/env bash
# Note: devcontainer CLI requires Node.js-specific functionality (umask, etc.)
# that Deno's compatibility layer doesn't support, so we use npx directly.
set -euo pipefail

REPO_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
EXEC_BIN="${REPO_ROOT}/bin/exec"

# Version pinned in third_party/javascript/deno.json for tracking
exec ${EXEC_BIN} npx --yes @devcontainers/cli@0.80.3 "$@"
