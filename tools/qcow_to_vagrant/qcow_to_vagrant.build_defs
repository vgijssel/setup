SCRIPT = "//tools/qcow_to_vagrant:qcow_to_vagrant_script"
BOX_OVF = "//tools/qcow_to_vagrant:box.ovf"

def qcow_to_vagrant(name:str, src:str):
    return genrule(
        name = name,
        srcs = [src],
        deps = [BOX_OVF],
        outs = [name + '.box'],
        cmd = """
        $TOOLS_SCRIPT "$SRCS" "$OUT"
        """,
        tools = {
            "script": SCRIPT,
        }
    )
