{
  "name": "Setup Development Environment (Docker-in-Docker)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "privileged": true,
  "overrideCommand": false,
  "postStartCommand": {
    "coder-agent": "if [ -n \"$CODER_INIT_SCRIPT\" ]; then printf '%s' \"$CODER_INIT_SCRIPT\" > /tmp/coder-init.sh && chmod +x /tmp/coder-init.sh && /tmp/coder-init.sh; fi"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-azuretools.vscode-docker",
        "mkhl.direnv",
        "ms-python.python",
        "bee.git-temporal-vscode",
        "github.copilot",
        "github.copilot-chat",
        "openai.chatgpt",
        "vspacecode.vspacecode",
        "alexanderbast.vscode-snazzy",
        "tilt-dev.tiltfile",
        "github.remotehub",
        "hashicorp.hcl",
        "hashicorp.terraform",
        "Hamster.task-master-hamster",
        "jetmartin.bats"
      ],
      "settings": {
        "remote.portsAttributes": {
          "8000": {
            "label": "fleet-mcp",
            "onAutoForward": "ignore"
          }
        }
      }
    }
  }
}
