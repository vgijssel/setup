{
  "name": "Setup Development Environment (Docker-in-Docker)",
  "build": {
    "dockerfile": "../libs/devcontainer/Dockerfile",
    "context": ".."
  },
  "remoteUser": "devcontainer",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker",
        "mkhl.direnv",
        "ms-python.python",
        "bee.git-temporal-vscode",
        "github.copilot",
        "github.copilot-chat",
        "openai.chatgpt",
        "vspacecode.vspacecode",
        "alexanderbast.vscode-snazzy",
        "tilt-dev.tiltfile",
        "github.remotehub",
        "hashicorp.hcl"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  }
}
