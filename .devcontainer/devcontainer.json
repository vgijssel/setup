{
  "name": "Setup Development Environment (Docker-in-Docker)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "options": ["--network=host"]
  },
  "remoteUser": "coder",
  "privileged": true,
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker",
        "mkhl.direnv",
        "ms-python.python",
        "bee.git-temporal-vscode",
        "github.copilot",
        "github.copilot-chat",
        "openai.chatgpt",
        "vspacecode.vspacecode",
        "alexanderbast.vscode-snazzy",
        "tilt-dev.tiltfile",
        "github.remotehub",
        "hashicorp.hcl",
        "hashicorp.terraform",
        "Hamster.task-master-hamster"
      ],
      "settings": {
        "remote.portsAttributes": {
          "8000": {
            "label": "fleet-mcp",
            "onAutoForward": "ignore"
          }
        }
      }
    }
  }
}
