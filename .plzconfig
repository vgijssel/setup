; Please config file
; Leaving this file as is is enough to use plz to build your project.
; Please will stay on whatever version you currently have until you run
; 'plz update', when it will download the latest available version.
;
; Or you can uncomment the following to pin everyone to a particular version;
; when you change it all users will automatically get updated.
; [please]
; version = 16.2.1

[buildconfig]
# TODO: can we define the same config multiple times to get an array?
ssh-config-dir = ./tmp/vagrant/ssh_configs
terraform-state = ./tmp/terraform/state
terraform-data = ./tmp/terraform/data
provisioner-platform = "linux_amd64"

[python]
moduledir = third_party.python

[alias "skopeo"]
cmd = run //third_party/skopeo:bin --

[alias "ssh"]
cmd = run //tools/ssh --

[alias "tf_init"]
cmd = run parallel //provisioner:deploy_init //provisioner-env:deploy_init

[alias "deploy"]
cmd = run sequential //provisioner:deploy_apply --arg="-auto-approve" //provisioner-env:deploy_apply --arg="-auto-approve"

[alias "destroy"]
cmd = run sequential //provisioner-env:deploy_destroy --arg="-auto-approve" //provisioner:deploy_destroy --arg="-auto-approve" 

[Parse]
PreloadBuildDefs = ./tools/please/sh_rules.build_defs