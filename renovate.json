{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["mergeConfidence:all-badges", "config:recommended"],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["/(^|/)moon\\.yml$/"],
      "matchStrings": [
        "$each(project.metadata.dependencies, function($v, $k) { { \"depName\": $k, \"currentValue\": $v.version, \"datasource\": $v.datasource, \"packageName\": $v.packageName } })"
      ]
    }
  ],
  "pip-compile": {
    "managerFilePatterns": ["/(^|/)requirements\\.txt$/"]
  },
  "addLabels": ["dependencies"],
  "constraints": {
    "python": "<= 3.12"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchCategories": ["ruby"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "pip_requirements": {
    "managerFilePatterns": ["/(^|/)requirements\\.in$/"],
    "ignorePaths": ["**/requirements.txt"]
  },
  "bazel-module": {
    "enabled": true
  },
  "bazel": {
    "managerFilePatterns": ["/(^|/)WORKSPACE\\.bzlmod$/"]
  },
  "docker-compose": {
    "managerFilePatterns": ["/(^|/)docker-compose\\.yml\\.j2$/"]
  },
  "automergeSchedule": ["after 9am every weekday", "before 5pm every weekday"]
}
