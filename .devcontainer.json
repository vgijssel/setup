{
  "name": "mvgijssel/setup Devcontainer",
  "build": { "dockerfile": "./tools/devcontainer/Dockerfile", "context": "." },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "BazelBuild.vscode-bazel",
        "bee.git-temporal-vscode",
        "GitHub.copilot",
        "vspacecode.vspacecode",
        "alexanderbast.vscode-snazzy",
        "tilt-dev.tiltfile",
        "GitHub.remotehub"
      ]
    }
  },
  "remoteUser": "devcontainer",
  "containerUser": "devcontainer",
  "mounts": [
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock"
  ],
  "settings": {
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/tmp/bazel-setup-bin/external/aspect_rules_format_pypi_black/rules_python_wheel_entry_point_black",
    "terminal.integrated.scrollback": 10000,
    "files.associations": {
      ".bazelrc": "plaintext"
    },
    "editor.formatOnSave": true,
    "bazel.buildifierExecutable": "/tmp/bazel-setup-bin/external/buildifier_prebuilt/buildifier/buildifier"
  },
  "shutdownAction": "stopContainer",
  "postAttachCommand": "bin/post-setup",
  "runArgs": ["--name", "setup-devcontainer"]
}
