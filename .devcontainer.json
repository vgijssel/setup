{
  "name": "mvgijssel/setup Devcontainer",
  "build": {
    "dockerfile": "./tools/devcontainer/Dockerfile",
    "context": ".",
    "args": { "USER_UID": "501", "USER_GID": "1000" }
  },
  // tilt: 10350
  "forwardPorts": [10350],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "BazelBuild.vscode-bazel",
        "bee.git-temporal-vscode",
        "GitHub.copilot",
        "vspacecode.vspacecode",
        "alexanderbast.vscode-snazzy",
        "tilt-dev.tiltfile",
        "GitHub.remotehub"
      ],
      "settings": {
        "python.formatting.provider": "black",
        "terminal.integrated.scrollback": 10000,
        "files.associations": {
          ".bazelrc": "plaintext"
        },
        "editor.formatOnSave": true
      }
    }
  },
  "remoteUser": "devcontainer",
  "containerUser": "devcontainer",
  "mounts": [
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    "source=setup-bazel,target=/home/devcontainer/bazel,type=volume"
  ],
  "shutdownAction": "stopContainer",
  "postAttachCommand": "bin/post-setup",
  "runArgs": ["--name", "setup-devcontainer"]
}
